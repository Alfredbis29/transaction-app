<%= render 'shared/header', text:"LOGIN", path:transactions_path %>
<div class="container">
<div class="form-container">
<h2>New transaction</h2>
<%= form_with(model:@transaction,scope:"transaction",local:true)do |f| %>
<fieldset>
<%= f.label :name, 'Name' %>
  <%= f.text_field :name ,id:"name" %>
</fieldset>

  <fieldset>
  <%= f.label :amount, 'Amount' %>
  <%= f.number_field :amount,id:"amount" %>
</fieldset>

<fieldset>
        <%= f.label :group_id, "Group",class:"form-label"%>
        <%= f.select :group_id, [["select Group",nil]]+Group.all.collect {|x| [x.name, x.id]}, {}, class: "multiple" %>
</fieldset>

  <%= f.submit "Register",class:'button bg-blue' %>
<% end %>
</div>
</div>

