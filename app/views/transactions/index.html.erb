<div class="container">
  <%= render 'shared/header', text:"TRANSACTIONS", path:groups_path %>
  <div class="groups-page">
    <div class="summary-widget">
      <p>My Transactions</p>
      <hr/>
      <p>Total Transactions:  <span> <%=@transactions.count%></span></p>
      <p>Total Amount:  <span> <%=@sum%>$</span> </p>
    </div>
    <%= render partial: 'shared/transaction' , collection: @transactions , as: :transaction %>
    <%= link_to 'New Transaction', new_transaction_path , class: "create-button shadow" %>
  </div>
</div>
